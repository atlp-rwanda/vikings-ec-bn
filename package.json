{
    "name": "vikings-ec-bn",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "better-npm-run dev",
        "migrate": "sequelize db:migrate",
        "migrate:reset": "sequelize db:migrate:undo:all && npm run migrate",
        "seed": "sequelize db:seed:all",
        "seeding": "npm run migrate:reset && npm run seed",
        "lint:fix": "eslint --fix ./*.js",
        "reset:db": "sequelize db:drop && sequelize db:create && npm run seeding",
        "test": "better-npm-run test",
        "start": "better-npm-run prod"
    },
    "betterScripts": {
        "dev": {
            "command": "nodemon --exec npx babel-node server",
            "env": {
                "NODE_ENV": "development",
                "PORT": 5000
            }
        },
        "test": {
            "command": "npm run reset:db&& jest tests/ --coverage --detectOpenHandles --testTimeout=55000 --forceExit",
            "env": {
                "NODE_ENV": "test",
                "PORT": 5000
            }
        },
        "prod": {
            "command": "babel-node server",
            "env": {
                "NODE_ENV": "production"
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atlp-rwanda/vikings-ec-bn.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/atlp-rwanda/vikings-ec-bn/issues"
    },
    "homepage": "https://github.com/atlp-rwanda/vikings-ec-bn#readme",
    "dependencies": {
        "@babel/core": "^7.20.12",
        "@babel/node": "^7.20.7",
        "@babel/preset-env": "^7.20.2",
        "@jest/globals": "^29.4.2",
        "bcrypt": "^5.1.0",
        "better-npm-run": "^0.1.1",
        "cloudinary": "^1.33.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-fileupload": "^1.4.0",
        "express-session": "^1.17.3",
        "jest": "^29.4.1",
        "joi": "^17.7.0",
        "joi-password": "^4.0.0",
        "jsonwebtoken": "^9.0.0",
        "jwt-redis": "^7.0.3",
        "nodemailer": "^6.9.1",
        "passport": "^0.6.0",
        "passport-google-oauth20": "^2.0.0",
        "pg": "^8.9.0",
        "pg-hstore": "^2.3.4",
        "redis": "^4.6.4",
        "sequelize": "^6.28.0",
        "sinon": "^15.0.1",
        "supertest": "^6.3.3",
        "swagger-ui-express": "^4.6.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "eslint": "^8.33.0",
        "morgan": "^1.10.0",
        "node-mocks-http": "^1.12.1",
        "nodemon": "^2.0.20",
        "sequelize-cli": "^6.6.0"
    }
}
